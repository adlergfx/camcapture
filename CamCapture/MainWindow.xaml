<Window x:Class="CamCapture.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CamCapture"
        mc:Ignorable="d"
        Title="Video Capture" Height="463" Width="473">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="113*"/>
            <RowDefinition Height="334*"/>
        </Grid.RowDefinitions>
        <GroupBox Header="Config" Margin="0,1,0,0" RenderTransformOrigin="0.5,0.5" Height="98" VerticalAlignment="Top">
            <GroupBox.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform AngleX="0.213"/>
                    <RotateTransform/>
                    <TranslateTransform X="-0.566"/>
                </TransformGroup>
            </GroupBox.RenderTransform>
            <Grid>
                <TextBox x:Name="tbFolder" Margin="7,12,67,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="23"/>
                <Button x:Name="btnBrowse" Content="..." Margin="0,12,9,0" VerticalAlignment="Top" HorizontalAlignment="Right" Width="50" Height="23" Click="onBrowseDirectory"/>
                <TextBox x:Name="tbServer" Margin="58,0,66,8" TextWrapping="Wrap" Height="23" VerticalAlignment="Bottom" TextChanged="tbServer_TextChanged" Text="1880" TextAlignment="Center"/>
                <Button x:Name="btnServer" Content="4" Margin="0,0,8,8" Height="23" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="50" Click="onServerStart" FontFamily="Webdings" IsEnabled="False"/>
                <Label Content="Port" Margin="7,43,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Width="32"/>
            </Grid>
        </GroupBox>
        <Image x:Name="image" Margin="10,32,10,41" Grid.Row="1"/>
        <Button x:Name="btnPlay" Content="4" Margin="0,102,43,0" VerticalAlignment="Top" Grid.RowSpan="2" HorizontalAlignment="Right" Width="26" Click="btnPlay_Click" FontFamily="Webdings" Height="23" IsEnabled="False"/>
        <Button x:Name="btnShot" Content="·" Margin="0,102,10,0" VerticalAlignment="Top" Grid.RowSpan="2" HorizontalAlignment="Right" Width="28" Click="btnShot_Click" Height="23" FontFamily="Webdings" IsEnabled="False"/>
        <ComboBox x:Name="cbCams" Margin="10,102,74,0" VerticalAlignment="Top" Grid.RowSpan="2" Height="23" SelectionChanged="cbCams_SelectionChanged"/>

    </Grid>
</Window>
